{
	"name": "department_restore_pipeline",
	"properties": {
		"activities": [
			{
				"name": "Copy avro file to table",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "AvroSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"wildcardFolderPath": {
								"value": "@concat('department/', formatDateTime(utcNow(), 'yyyy-MM-dd'))",
								"type": "Expression"
							},
							"wildcardFileName": "*.avro",
							"enablePartitionDiscovery": false
						}
					},
					"sink": {
						"type": "AzureSqlSink",
						"writeBehavior": "upsert",
						"upsertSettings": {
							"useTempDB": true,
							"keys": [
								"id"
							]
						},
						"sqlWriterUseTableLock": false,
						"disableMetricsCollection": false
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "department_avro",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "Destination_departments",
						"type": "DatasetReference"
					}
				]
			}
		],
		"folder": {
			"name": "data restore"
		},
		"annotations": []
	}
}